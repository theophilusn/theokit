<div class="container prose max-w-none p-4 lg:border-[6px] border-duchess-tan-15 rounded-xl">
    <h5 class="text-duchess-dark-blue mb-4 -mx-8 md:mx-0">Videos</h5>
    <div class="grid grid-cols-1 lg:grid-cols-2 max-w-none gap-4 lg:mx-0">
        {% for item in items %}
            <div class="w-full remote">
                {{ item.content }}
            </div>
            <div>
                <div class="text-2xl text-duchess-dark-blue">
                    {{ item.content['#media'].name.value }}
                </div>
                <p>
                    {{ item.content['#media'].field_video_description.value }}
                </p>
            </div>
        {% endfor %}
    </div>
</div>
